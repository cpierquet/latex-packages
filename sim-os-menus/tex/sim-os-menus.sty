	%environment
	\begin{tikzpicture}[#3]
		\ifboolKV[MenuContext]{Arrondi}%
			{\tikzset{contextborder/.style={rounded corners=4pt}}}%
			{\tikzset{contextborder/.style={}}}%
		%--first node
		\coordinate (I-1-1) at (0,0) ;%
		%--levels one by one--
		\foreach \niv in {1,...,\DonnesContMenulen}{%
